<title>Register</title>

<section class="login flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <img class="mx-auto h-12 w-auto" src="/favicon.ico">
      <h2 class="mt-6 text-center font-extrabold text-gray-900 text-5xl">
        Register
      </h2>
    </div>
    <form class="mt-8 space-y-6" action="/auth/register" method="POST">
      <% if(messages.error) { %>
        <span class="text-red-500 text-lg font-bold">
          <%= messages.error %>
        </span>
        <% } %>
          <input type="hidden" name="remember" value="true">
          <div class="rounded-md shadow-sm -space-y-px font-bold text-lg">
            <div>
              <span>Name</span>
              <input value="<%= messages.name %>" id="name" name="name" type="text" required
                class="mt-2 appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 base:text-lg">
            </div>
            <div class="py-4">
              <span>Email address</span>
              <input value="<%= messages.email %>" id="email-address" name="email" type="email" autocomplete="email"
                required
                class="mt-2 appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 base:text-lg">
            </div>
            <div>
              <span>Password</span>
              <input id="password" name="password" type="password" autocomplete="current-password" required
                class="mt-2 appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 base:text-lg">
            </div>
          </div>

          <div class="flex items-center justify-between">
            <div class="flex items-center">
              <input id="remember-me" name="remember-me" type="checkbox"
                class="h-4 w-4 text-indigo-600 focus:ring-indigo-500 border-gray-300 rounded">
              <label for="remember-me" class="ml-2 block text-sm text-gray-900 text-base">
                Remember me
              </label>
            </div>

            <div class="text-sm">
              <a href="/auth/login" class="text-indigo-600 hover:text-indigo-500 font-bold text-base">
                Already have account?
              </a>
            </div>
          </div>

          <div>
            <button type="submit"
              class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-lg font-bold rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 btn-primary">
              Register
            </button>
          </div>
    </form>
    <p class="text-center text-gray-500 text-base">
      &copy;2021 Tran Huu Toan. All rights reserved.
    </p>
  </div>
</section>